<AnchorPane prefHeight="600" prefWidth="600"
	xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MainMenuController">

	<!-- 백그라운드 이미지 -->

	<ImageView id="background" fitHeight="600.0" fitWidth="600.0"
		pickOnBounds="true">
		<image>
			<Image url="images/Image_MainMenu.jpg" preserveRatio="true"
				smooth="true" />
		</image>
	</ImageView>

	<!-- 화살표버튼 뒤로가기 -->
	<VBox>
		<children>
			<HBox>
				<padding>
					<Insets top="10" right="10" bottom="10" left="10" />
				</padding>
				<Button fx:id="btn_Exit" BorderPane.alignment="TOP_RIGHT"
					prefHeight="24.0" prefWidth="24.0"
					style="-fx-background-color: transparent;">
					<graphic>
						<ImageView fitHeight="35" fitWidth="35">
							<Image url="images/btn_Exit.png" />
						</ImageView>
					</graphic>
				</Button>
			</HBox>

			<AnchorPane>
				<!-- 매장관리 버튼 -->
				<children>
					<Button layoutX="215" layoutY="65"
						fx:id="btn_StroeManagement"
						style="-fx-background-color: transparent;">
						<graphic>
							<ImageView fitHeight="229" fitWidth="254"
								pickOnBounds="true" preserveRatio="true">
								<image>
									<Image url="images/btn_StroeManagement.png" />
								</image>
							</ImageView>
						</graphic>
					</Button>
				</children>

				<!-- 재고관리 버튼 -->
				<children>
					<Button layoutX="45" layoutY="180"
						fx:id="btn_ItemInventoryManagement"
						style="-fx-background-color: transparent;">
						<graphic>
							<ImageView fitHeight="203" fitWidth="224"
								pickOnBounds="true" preserveRatio="true">
								<image>
									<Image url="images/btn_ItemInventoryManagement.png" />
								</image>
							</ImageView>
						</graphic>
					</Button>
				</children>
				<!-- 협력업체관리 버튼 -->
				<children>
					<Button layoutX="250" layoutY="282"
						fx:id="btn_LcooperatorManagement"
						style="-fx-background-color: transparent;">
						<graphic>
							<ImageView fitHeight="155" fitWidth="170"
								pickOnBounds="true" preserveRatio="true">
								<image>
									<Image url="images/btn_FurnitureForwardingManagement.png" />
								</image>
							</ImageView>
						</graphic>
					</Button>
				</children>

				<!-- VMD관리 버튼 -->
				<children>
					<Button layoutX="95" layoutY="12"
						fx:id="btn_ManageSalesRepresentatives"
						style="-fx-background-color: transparent;">
						<graphic>
							<ImageView fitHeight="155" fitWidth="170"
								pickOnBounds="true" preserveRatio="true">
								<image>
									<Image url="images/btn_ManageSalesRepresentatives.png" />
								</image>
							</ImageView>
						</graphic>
					</Button>
				</children>


			</AnchorPane>
		</children>
	</VBox>
</AnchorPane>

