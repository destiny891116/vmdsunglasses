<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="724.0" prefWidth="600.0"
	xmlns:fx="http://javafx.com/fxml"
	fx:controller="controller.Logincontroller">

	<!-- 백그라운드 이미지 -->

	<ImageView id="background" fitHeight="724.0" fitWidth="600.0"
		pickOnBounds="true">
		<image>
			<Image url="images/Image_Login.jpg" preserveRatio="true"
				smooth="true" />
		</image>
	</ImageView>


	<!-- 이미지버튼 -->
	<VBox>
		<children>
			<HBox>
				<padding>
					<Insets top="10" right="10" bottom="10" left="10" />
				</padding>
				<Button fx:id="btn_l_Exit" BorderPane.alignment="TOP_RIGHT"
					prefHeight="24.0" prefWidth="24.0"
					style="-fx-background-color: transparent;">
					<graphic>
						<ImageView fitHeight="35" fitWidth="35">
							<Image url="images/btn_l_Exit.png" />
						</ImageView>
					</graphic>
				</Button>
			</HBox>

			<AnchorPane>
				<!-- 아이디텍스트 -->
				<children>
					<TextField promptText="ID" layoutX="148.642"
						layoutY="476" prefHeight="34.942" prefWidth="267.121"
						fx:id="txt_l_Id" style="-fx-background-color: transparent;">
						<font>
							<Font size="15" />
						</font>
					</TextField>
				</children>

				<!-- 비밀번호텍스트 -->
				<children>
					<PasswordField promptText="Password"
						layoutX="148.642" layoutY="520" prefHeight="34.942"
						prefWidth="267.121" fx:id="pw_l_Password"
						style="-fx-background-color: transparent">
						<font>
							<Font size="15" />
						</font>
					</PasswordField>
				</children>
				<!-- 로그인버튼 -->
				<children>
					<Button layoutX="395" layoutY="472" fx:id="btn_l_Login"
						style="-fx-background-color: transparent;">
						<graphic>
							<ImageView fitHeight="78.038" fitWidth="77.05"
								pickOnBounds="true" preserveRatio="true">
								<image>
									<Image url="images/btn_l_Login.png" />
								</image>
							</ImageView>
						</graphic>
					</Button>
				</children>
				<!-- 회원가입버튼 -->
				<children>
					<Button layoutX="120" layoutY="560" fx:id="btn_l_Join"
						style="-fx-background-color: transparent;">
						<graphic>
							<ImageView fitHeight="18.962" fitWidth="79.996"
								pickOnBounds="true" preserveRatio="true">
								<image>
									<Image url="images/btn_l_join.png" />
								</image>
							</ImageView>
						</graphic>
					</Button>
				</children>
			</AnchorPane>
		</children>
	</VBox>
</AnchorPane>

